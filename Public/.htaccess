RewriteEngine On

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-l

RewriteCond %{REQUEST_URI} !\.(css|gif|ico|jpg|js|png|swf|txt|webp)$


RewriteRule ^/?$ index.php [L]


RewriteRule ^kind/([A-z|-]+)/?$ index.php?c=Catalog&lsp=$1 [QSA,L]

RewriteRule ^nsx/([A-z|-]+)/?$ index.php?c=Catalog&nsx=$1 [QSA,L]   

RewriteRule ^sanpham/[A-z|-]+-([0-9]+).html$ index.php?c=SanPham&id=$1 [QSA,L]

RewriteRule ^test.*$ index.php?c=Test [L] 

#RewriteRule ^ /404.html [L,R]


